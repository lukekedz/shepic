<div class="row center-align flow-text">
    <div class="col s12">

        <div class="row">
            <!-- 12 cols -->
            <div class="col s12">
                <h5>Week <%= @archived_week.week %> => <%= @weekly_user_win_total %> wins</h5>
            </div>
        </div>

        <div class="row">
            <!-- 12 cols -->
            <div class="col s12">
                <ul id="dropdown3" class="dropdown-content">
                    <% @weeks.each do |wk| %>
                        <li><%= link_to "Week " + wk.week.to_s, site_archived_path(:week => wk.id) %></li>
                    <% end %>
                </ul>
                <a class="btn dropdown-button" href="#!" data-activates="dropdown3">
                    History
                    <i class="mdi-navigation-arrow-drop-down right"></i>
                </a>
            </div>
        </div>

        <div class="row">
            <!-- 12 cols -->
            <% @games.each_with_index do |g, i| %>
                <div class="col s12 <%= if i % 2 == 0 then 'background' end %>">
                    <div class="row">
                        <div class="col s12">
                            Game <%= i + 1 %>
                            <span class="alert"><%= if g.tiebreaker == true then '(tiebreaker)' end %></span>
                        </div>

                        <!-- DATETIME -->
                        <div class="col s12">
                            <strong><%= game_day(g[:date]) %> <%= convert_military_to_ampm(g[:start_time]) %></strong>
                        </div>

                        <!-- LOCATION -->
                        <div class="col s12">
                            @ <%= g[:location] %>
                        </div>

                         <!-- BREAK -->
                        <div class="col s12"><br/></div>

                        <!-- TEAM MATCHUP -->
                        <div class="row matchup-smaller-font">
                            <div class="col s5">
                                <strong><%= g[:away] %></strong>
                            </div>
                            <div class="col s2">
                                vs.
                            </div>
                            <div class="col s5">
                                <strong><%= g[:home] %></strong>
                            </div>
                        </div>

                        <!-- TEAM LOGOS -->
                        <div class="col s5">
                            <%= image_tag g[:away] + '.png', :class => 'responsive-img game-pick-logo' %>
                        </div>
                        <div class="col s2">
                            &nbsp;
                        </div>
                        <div class="col s5">
                            <%= image_tag g[:home] + '.png', :class => 'responsive-img game-pick-logo' %>
                        </div>

                        <!-- FINAL SCORE -->
                        <div class="col s12 matchup-smaller-font ">
                            <strong>Final Score:</strong>
                        </div>

                        <div class="col s6">
                            <strong><%= g[:away_pts] %></strong>
                        </div>
                        <div class="col s6">
                            <strong><%= g[:home_pts] %></strong>
                        </div>

                        <!-- SPREAD -->
                        <div class="col s6 offset-s6 matchup-smaller-font">
                            Spread:
                            <strong>
                                <%= g[:spread] > 0 ? "+" : "" %><%= g[:spread] %>
                            </strong>
                        </div>

                        <!-- BREAK -->
                        <div class="col s12"><br/></div>

                        <!-- PICK RIGHT/WRONG -->
                        <div class="col s6 matchup-smaller-font">
                            Your Pick: 
                            <br/>
                            <strong><%= @picks[ g[:id] ][:pick] %></strong>
                        </div>
                        
                        <div class="col s6 archived-right-wrong">
                            <% if @picks[ g[:id] ][:correct] == nil %>
                                <span class="alert">PUSH</span>
                            <% else %>
                                <% if @picks[ g[:id] ][:correct] == true %>
                                    <%= image_tag 'correct.png' %>
                                <% else %>
                                    <%= image_tag 'x.png' %>
                                <% end %>
                            <% end %>
                        </div>

                    </div>
                </div>
            <% end %>
        </div>

    </div>
</div>