<div class="row">
  <div class="col s12">
    <div style="border: 1px black solid; text-align:center"><span class="flow-text">Shep's Pick 'Em</span></div>

  </div>
</div>


<div class="row">
  <div class="col s12">
    <!-- Dropdown Trigger -->
    <div class="col s6 offset-s3">
      <a class='dropdown-button btn' href='#' data-activates='dropdown1'>Choose Week</a>

      <!-- Dropdown Structure -->
      <ul id='dropdown1' class='dropdown-content'>
        <li><a href="#!">Week 1</a></li>
        <li><a href="#!">Week 2</a></li>
        <li><a href="#!">Week 3</a></li>
        <li><a href="#!">Week 4</a></li>
        <li><a href="#!">Week 5</a></li>
        <li class="divider"></li>
        <li><a href="#!">Playoff 1</a></li>
      </ul>

  </div>
</div>


<% @games.each do |g| %>
  <div class="row">
    <div class="col s12">
       <div style="border: 1px black solid; text-align:center">
          <div class="row">
            <div class="col s8" style="border: 1px black solid; text-align:center">
              <p><strong><%= g[0][:away] %></strong> vs. <strong><%= g[0][:home] %></strong></p>
            </div>
             <div class="col s2" style="border: 1px black solid; text-align:center">
              <p style="float: right; display: inline block; bordeer: 1px black solid;"><strong><%= g[0][:spread] %></strong></p>
            </div>
          </div>

          <div class="row">
            <div class="col s12" style="border: 1px black solid; text-align:center">
              <p><strong>Location:</strong> <%= g[0][:location] %></p>
            </div>
          </div>

          <div class="row">

              <div class="col s6" style="border: 1px black solid; text-align:center">
                <strong></strong> <a class="waves-effect waves-light btn"><%= g[0][:away] %>  <%= g[0][:dawg] %></a></a>
              </div>
              <div class="col s6" style="border: 1px black solid; text-align:center">
                <strong><a class="waves-effect waves-light btn"><%= g[0][:home] %>  <%= g[0][:spread] %></a>
              </div>

          </div>

       </div>
    </div>
  </div>
<% end %>
