<div class="row center-align flow-text">
    <div class="col s12">

        <% if @games %>
            <% @games.each_with_index do |g, i| %>
                <div class="row">

                    <div class="col s12 <%= if i % 2 == 0 then 'background' end %>">

                        <div class="row">
                            <!-- 12 cols -->
                            <div class="col s12">
                                Game <%= i + 1 %> 
                                <span class="alert"><%= if g.tiebreaker == true then '(tiebreaker)' end %></span>
                            </div>

                            <!-- 12 cols -->
                            <div class="col s12">
                                <strong><%= game_day(g[:date]) %> <%= g[:start_time] %></strong>
                            </div>

                            <!-- 12 cols -->
                            <div class="col s12">
                                @ <%= g[:location] %>
                            </div>

                             <!-- 12 cols -->
                             <!-- BREAK -->
                            <div class="col s12"><br/></div>

                            <!-- 12 cols -->
                            <!-- 6 -->
                            <!-- AWAY BUTTON/FORM SELECTION -->
                            <div class="col s6">
                                <% if @current_week.locked == true && !@current_week.finalized %>
                                <form action="" role="form" class="pick" method="POST">
                                    <input type="hidden" value="<%= current_user.id %>" id="user-id">
                                    <input type="hidden" value="<%= g[:id] %>" id="<%= g[:id] %>">
                                    <input type="hidden" value="<%= g[:away] %>" id="away-game-pick-<%= g[:id] %>">
                                    <input type="hidden" value="away" id="away-home">

                                    <button type="submit" name="action">
                                        <strong><img class="responsive-img" src="/assets/osu.png"></strong>
                                    </button>
                                <% else %>
                                    <%= g[:away] %>
                                <% end %>
                                </form>
                            </div>

                            <!-- 6 -->
                            <!-- HOME BUTTON/FORM SELECTION -->
                            <div class="col s6">
                                <% if @current_week.locked == true && !@current_week.finalized %>
                                <form action="" role="form" class="pick" method="POST">
                                    <input type="hidden" value="<%= current_user.id %>" id="user-id">
                                    <input type="hidden" value="<%= g[:id] %>" id="<%= g[:id] %>">
                                    <input type="hidden" value="<%= g[:home] %>" id="home-game-pick-<%= g[:id] %>">
                                    <input type="hidden" value="home" id="away-home">

                                    <button type="submit" name="action">
                                        <strong><img class="responsive-img" src="/assets/michigan.png"></strong>
                                    </button>
                                <% else %>
                                    <%= g[:home] %>
                                <% end %>
                                </form>
                            </div>

                             <!-- 12 cols -->
                             <!-- BREAK -->
                            <div class="col s12"><br/></div>

                            <!-- 12 cols -->
                            <div class="col s12">
                                Spread: <strong><%= g[:spread] %></strong>
                            </div>

                             <!-- 12 cols -->
                             <!-- BREAK -->
                            <div class="col s12"><br/></div>

                            <!-- 12 cols -->
                            <strong>
                            <div class="col s12" id="your-pick-<%= g[:id] %>">
                                Your Pick: <%= @picks[ g[:id] ] %>
                            </div>
                            </strong>
                        </div>

                    </div>

                </div>
            <% end %>
        <% end %>

    </div>
</div>