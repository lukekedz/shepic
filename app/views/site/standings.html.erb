<div class="row center-align flow-text">
  <div class="col s12">

    <div class="row">
      <div class="col s12">
        <h5>Standings</h5>
        <h6>(through Week <%= @week != nil ? @week.week : 1 %>)</h6>
      </div>
    </div>

    <% if @user.standing.wins == @most_wins && @week != nil %>
    <div class="row">
      <div class="col s12">
        <%= image_tag 'first_place.png', :class => 'responsive-img standings-easter-egg' %>
      </div>
    </div>
    <% end %>

    <div class="row">
      <div class="col s4">
        Username
      </div>

      <div class="col s4">
        Total Wins
      </div>

      <div class="col s4">
        Last Week
      </div>
    </div>

    <div class="row">
      <% if @week != nil %>
        <% @standings.each_with_index do |st, i| %>
          <% if st.user.admin == false %>
          <div class="col s4 <%= if i % 2 == 0 then 'background' end %>">
            <%= st.user.username %>
          </div>

          <div class="col s4 <%= if i % 2 == 0 then 'background' end %>">
            <%= st.wins %>
          </div>

          <div class="col s4 <%= if i % 2 == 0 then 'background' end %>">
            + <%= @last_weeks_wins[i] %> wins
          </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <% if @user.standing.wins == @fewest_wins && @week != nil %>
    <div class="row">
      <div class="col s12">
        <h5>whomp whomp</h5>
      </div>
      <div class="col s12">
        <%= image_tag 'gingerbread.jpg', :class => 'responsive-img standings-easter-egg' %>
      </div>
    </div>
    <% end %>

  </div>
</div>