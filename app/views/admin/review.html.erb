<div class="row center-align flow-text">
    <div class="col s12">

        <div class="row">
            <div class="col s12">
                <h5>Admin: Review & Finalize</h5>
                <h5>Game Scores</h5>
            </div>
        </div>

	    <% @games.each_with_index do |g, i| %>
            <div class="row">
                <div class="col s12 <%= if i % 2 == 0 then 'background' end %>">

                    <div class="row">

                        <!-- 12 cols -->
                        <div class="col s12">
                            Game <%= i + 1 %>
                            <span class="alert"><%= if g.tiebreaker == true then '(tiebreaker)' end %></span>
                        </div>

                        <!-- 12 cols -->
                        <div class="col s12">
                            <strong><%= game_day(g[:date]) %> <%= convert_military_to_ampm(g[:start_time]) %></strong>
                        </div>

                        <!-- 12 cols -->
                        <div class="col s12">
                            @ <%= g[:location] %>
                        </div>

                        <!-- 12 cols -->
                        <!-- BREAK -->
                        <div class="col s12"><br/></div>

                        <!-- 12 cols -->
                        <!-- TEAM MATCHUP -->
                        <div class="col s12">
                            <strong><%= g[:away] %></strong> vs. <strong><%= g[:home] %></strong>
                        </div>

                        <!-- 12 cols -->
                        <!-- TEAM LOGOS -->
                        <div class="col s6">
                            <strong><%= image_tag g[:away] + '.png', :class => 'responsive-img game-pick-logo' %></strong>
                        </div>
                        <div class="col s6">
                            <strong><%= image_tag g[:home] + '.png', :class => 'responsive-img game-pick-logo' %></strong>
                        </div>

                        <!-- 12 cols -->
                        <strong>
                        <div class="col s12">
                            Final Score:
                        </div>
                        </strong>

                        <!-- 12 cols -->
                        <div class="col s6">
                            <strong><%= g[:away_pts] %></strong>
                        </div>
                        <div class="col s6">
                            <strong><%= g[:home_pts] %></strong>
                        </div>

                    </div>

                </div>
            </div>
        <% end %>

        <div class="row"><div class="divider"></div></div>

	    <div class="row">
	        <div class="col s12">
	            <a onclick="return confirm('Warning! Finalizing scores calculates correct picks & increments standings. It cannot be reversed!')"
	               href="/admin/finalize" class="waves-effect waves-light btn">Finalize Scores</a>
	        </div>
	    </div>

	    <div class="row">
	        <div class="col s12">
	          <a href="/admin/scores" class="waves-effect waves-light btn">Return to Add Game Scores</a>
	        </div>
	    </div>

	</div>
</div>
