<div class="row center-align">
    <div class="col s10 offset-s1">

        <h4>Sign up</h4>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :username, required: true, autofocus: true, label: false, placeholder: "enter username" %>
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "enter email" %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "enter password" %>
            <%= f.input :password_confirmation, required: true, label: false, placeholder: "confirm password" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

    </div>
</div>
